# Indexer Environment Configuration

# OpenAI API Key (optional - can be set via UI)
# Leave empty to configure through the settings panel
OPENAI_API_KEY=

# Encryption key for settings service (OPTIONAL - auto-generated if not set)
# Leave empty to auto-generate a secure key on first startup
# The key will be saved to settings-service/data/.encryption_key
# ONLY set this manually if you need to use a specific key (e.g., migrating data)
ENCRYPTION_KEY=

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8004

# Service Ports (all exposed for development/debugging as per claude.md)
FRONTEND_PORT=3000
API_GATEWAY_PORT=8000
DOCUMENT_SERVICE_PORT=8001
TREE_SERVICE_PORT=8002
QUERY_SERVICE_PORT=8003
CHAT_SERVICE_PORT=8004
STORAGE_SERVICE_PORT=8005
CACHE_SERVICE_PORT=8006
SETTINGS_SERVICE_PORT=8007

# Database paths (in containers)
STORAGE_DB_PATH=/app/data/storage.db
SETTINGS_DB_PATH=/app/data/settings.db

# Cache settings
CACHE_TTL_DEFAULT=3600
MAX_CACHE_SIZE_MB=512

# Upload settings
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=pdf

# Logging
LOG_LEVEL=info